<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/_7sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="WebViewLayout">

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/notice_border_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="WebViewLayout">
    <!--<Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/notice_button"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_margin="5dp"
        android:paddingLeft="12dp"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:background="@drawable/notice_border_back"/>-->

    <TextView
        android:id="@+id/tv_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:text="Bulletin header"
        android:textColor="#FFF"
        android:gravity="center_horizontal" />

    <View
        android:id="@+id/v_header_line"
        android:visibility="gone"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"/>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textAlignment="center"
        android:text="Bulletin Date"
        android:textColor="#FFF"
        android:gravity="center"
        />

    <WebView
        android:id="@+id/wv_body"
        android:visibility="gone"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_ques"
        android:scrollbars="none"
        tools:ignore="WebViewLayout" />

        <RelativeLayout
            android:id="@+id/rl_pdf_notice"
            android:visibility="gone"
            android:layout_margin="@dimen/_10sdp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_pdf_icon"
                android:src="@drawable/ic_pdf_icon"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"/>
            <TextView
                android:layout_marginLeft="@dimen/_3sdp"
                android:text="notice.pdf"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_pdf_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_image_notice"
            android:visibility="gone"
            android:layout_margin="@dimen/_10sdp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_image_icon"
                android:src="@drawable/ic_image_icon"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"/>
            <TextView
                android:layout_marginLeft="@dimen/_3sdp"
                android:text="notice.image"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_image_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_menu_back"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.crypedu.Activity.HomeWorkActivity"
    tools:showIn="@layout/activity_home_work">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@color/colorWhite"
        android:id="@+id/title_linearLayout"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_weight=".20"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Subject"
            android:id="@+id/subject_textView"
            android:textColor="@color/colorAccent"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_weight=".20"
            android:id="@+id/chapter_textView"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Chapter"
            android:textColor="@color/colorAccent"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_weight=".20"
            android:textSize="20dp"
            android:id="@+id/assign_textView"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Assign"
            android:textColor="@color/colorAccent"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_weight=".20"
            android:textSize="20dp"
            android:id="@+id/submit_textView"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textColor="@color/colorAccent"/>
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".95"
        android:padding="20dp"
        android:id="@+id/listView_homeWork"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".05"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/copyRight_textView"/>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="1dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:background="@drawable/button_background"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_quiz_name"
            android:textSize="@dimen/_14sdp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/colorTeacherCalling"
            android:text="Quiz Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />
        <TextView
            android:id="@+id/tv_time"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@+id/tv_quiz_name"
            android:text="Time: 30 mins"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/black_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_total_question"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_below="@+id/tv_quiz_name"
            android:layout_alignParentRight="true"
            android:text="Total questions: 20"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/black_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_subject_name"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@+id/tv_time"
            android:text="Subject Name:"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/black_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


      <TextView
        android:id="@+id/tv_test_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_subject_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_weight="1"
        android:text="Exam date: 10-06-2020"
        android:textColor="#730B20"
        android:textSize="@dimen/_13sdp" />

        <Button
            android:id="@+id/btn_view_result"
            android:text="View Result"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:textAllCaps="false"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/colorWhite"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_corner_button"
            android:backgroundTint="@color/colorPresent"
            android:layout_below="@+id/tv_test_date"
            android:layout_width="wrap_content"
            android:paddingLeft="@dimen/_3sdp"
            android:paddingRight="@dimen/_3sdp"
            android:layout_height="@dimen/_30sdp"/>
        <Button
            android:id="@+id/btn_view_exam"
            android:text="View Exam"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textAllCaps="false"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/rounded_corner_button"
            android:backgroundTint="@color/colorPresent"
            android:layout_below="@+id/tv_test_date"
            android:layout_width="wrap_content"
            android:paddingLeft="@dimen/_3sdp"
            android:paddingRight="@dimen/_3sdp"
            android:layout_height="@dimen/_30sdp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>



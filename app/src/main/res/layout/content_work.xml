<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_menu_back"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.crypedu.Activity.WorkActivity"
    tools:showIn="@layout/activity_work">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".50"
        android:id="@+id/linearLayout_classWork"
        android:gravity="center"
        android:orientation="vertical">
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_gravity="center"
            android:id="@+id/cl_img_noti_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageView_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_class_work"/>
            <TextView
                android:id="@+id/tv_noti_count_class"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/badge_circle"
                android:gravity="center"
                android:text="10"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:layout_anchor="@+id/imageView_class"
                app:layout_anchorGravity="end|top" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/classWork_textView"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textColor="@color/colorClassWork"
            android:text="Class Work"/>
    </LinearLayout>
    <androidx.legacy.widget.Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".50"
        android:id="@+id/linearLayout_homeWork"
        android:gravity="center"
        android:orientation="vertical">
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_gravity="center"
            android:id="@+id/cl_img_noti_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_homework"/>
            <TextView
                android:id="@+id/tv_noti_count_home"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/badge_circle"
                android:gravity="center"
                android:text="10"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:layout_anchor="@+id/imageView_home"
                app:layout_anchorGravity="end|top" />
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/homeWork_textView"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textColor="@color/colorHomeWork"
            android:text="Home Work"/>
    </LinearLayout>
</LinearLayout>

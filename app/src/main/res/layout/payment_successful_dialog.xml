<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_margin="@dimen/_10sdp"
  app:cardCornerRadius="11dp">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.crypedu.Helper.GifImageView
      android:id="@+id/iv_gif"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_alignParentBottom="true"
      android:layout_marginBottom="@dimen/_130sdp"
      android:text="Your Payment is successful"
      android:textColor="@color/colorTeacherCalling"
      android:textSize="@dimen/_16sdp" />

    <TextView
      android:id="@+id/tv_unique_code"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true"
      android:layout_marginBottom="@dimen/_100sdp"
      android:text="store unique id"
      android:textColor="@color/colorTeacherCalling"
      android:textSize="@dimen/_12sdp" />


    <TextView
      android:id="@+id/tv_close"
      android:layout_width="150dp"
      android:layout_height="40dp"
      android:layout_centerHorizontal="true"
      android:layout_alignParentBottom="true"
      android:layout_marginBottom="@dimen/_40sdp"
      android:layout_marginTop="38dp"
      android:background="@drawable/a"
      android:gravity="center"
      android:text="Close"
      android:textColor="@color/colorTeacherCalling"
      android:textSize="16dp"
      />

  </RelativeLayout>

</androidx.cardview.widget.CardView>

